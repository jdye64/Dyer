<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <import resource="applicationContext.xml"/>

    <bean id="baseJdbc" abstract="true">
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <bean id="networkLocationDao" class="com.jeremydyer.dao.network.jdbc.NetworkLocationDaoImpl" parent="baseJdbc" />
    <bean id="networkDeviceDao" class="com.jeremydyer.dao.network.jdbc.NetworkDeviceDaoImpl" parent="baseJdbc" />
    <bean id="networkDeviceServiceDao" class="com.jeremydyer.dao.network.jdbc.NetworkDeviceServiceDaoImpl" parent="baseJdbc" />
    <bean id="networkDeviceServiceCommandDao" class="com.jeremydyer.dao.network.jdbc.NetworkDeviceServiceCommandDaoImpl" parent="baseJdbc" />

    <!-- Woodshop Persistence layer information -->
    <bean id="woodTypeDao" class="com.jeremydyer.dao.woodshop.jdbc.WoodTypeDaoImpl" parent="baseJdbc" />
    <bean id="woodSpeciesDao" class="com.jeremydyer.dao.woodshop.jdbc.WoodSpeciesDaoImpl" parent="baseJdbc" />
    <bean id="woodItemDao" class="com.jeremydyer.dao.woodshop.jdbc.WoodItemDaoImpl" parent="baseJdbc" />
    <bean id="projectDao" class="com.jeremydyer.dao.woodshop.project.jdbc.ProjectDaoImpl" parent="baseJdbc" />
    <bean id="projectCutDao" class="com.jeremydyer.dao.woodshop.project.jdbc.ProjectCutDaoImpl" parent="baseJdbc" />
    <bean id="projectStepDao" class="com.jeremydyer.dao.woodshop.project.jdbc.ProjectStepDaoImpl" parent="baseJdbc" />
    <bean id="buildDao" class="com.jeremydyer.dao.woodshop.project.build.jdbc.BuildDaoImpl" parent="baseJdbc" />
    <bean id="buildCutDao" class="com.jeremydyer.dao.woodshop.project.build.jdbc.BuildCutDaoImpl" parent="baseJdbc" />
    <bean id="buildTimeDao" class="com.jeremydyer.dao.woodshop.project.build.jdbc.BuildTimeDaoImpl" parent="baseJdbc" />
    <bean id="photoDao" class="com.jeremydyer.dao.media.jdbc.PhotoDaoImpl" parent="baseJdbc" />
</beans>